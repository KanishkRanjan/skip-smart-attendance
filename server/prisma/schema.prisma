generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  semesters Semester[]
}

model Semester {
  id        String    @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  holidays  Holiday[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects  Subject[]

  @@index([userId], map: "Semester_userId_fkey")
}

model Subject {
  id               String         @id @default(uuid())
  name             String
  code             String?
  color            String?
  semesterId       String
  schedule         Json
  targetPercentage Float          @default(75)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  sessions         ClassSession[]
  semester         Semester       @relation(fields: [semesterId], references: [id], onDelete: Cascade)

  @@index([semesterId], map: "Subject_semesterId_fkey")
}

model ClassSession {
  id        String        @id @default(uuid())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  subjectId String
  status    SessionStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  subject   Subject       @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@index([subjectId])
  @@index([date])
}

model Holiday {
  id         String   @id @default(uuid())
  name       String
  date       DateTime
  semesterId String
  semester   Semester @relation(fields: [semesterId], references: [id], onDelete: Cascade)

  @@index([semesterId], map: "Holiday_semesterId_fkey")
}

enum SessionStatus {
  PENDING
  ATTENDED
  SKIPPED
  CANCELLED
}
